@model LPS.Product

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Product</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductID)
        </div>
        <div class="editor-field">
            @Html.DisplayTextFor(model => model.ProductID)           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductCatID, "ProductCategory")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProductCatID", String.Empty)
            @Html.ValidationMessageFor(model => model.ProductCatID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Image)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Image)
            @Html.ValidationMessageFor(model => model.Image)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductName)
            @Html.ValidationMessageFor(model => model.ProductName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Specification)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Specification)
            @Html.ValidationMessageFor(model => model.Specification)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Avtive)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Avtive)
            @Html.ValidationMessageFor(model => model.Avtive)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
